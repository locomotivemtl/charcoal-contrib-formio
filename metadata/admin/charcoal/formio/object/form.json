{
    "admin": {
        "labels": {
            "name": {
                "en": "Form",
                "fr": "Formulaire"
            },
            "singularName": {
                "en": "Form",
                "fr": "Formulaire"
            },
            "editItem": {
                "en": "Edit Form",
                "fr": "Modifier le formulaire"
            },
            "createItem": {
                "en": "Create Form",
                "fr": "Cr√©er un formulaire"
            },
            "newItem": {
                "en": "New Form",
                "fr": "Nouveau formulaire"
            },
            "allItems": {
                "en": "All Forms",
                "fr": "Tous les formulaires"
            },
            "menuItems": {
                "en": "Forms",
                "fr": "Formulaire"
            }
        },

        "lists": {
            "default": {
                "label": {},
                "properties": [
                    "title"
                ],
                "listActions": [
                    {
                        "ident": "create",
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                ],
                "objectActions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": {
                    "position": {
                        "property": "created",
                        "mode": "desc"
                    }
                }
            }
        },

        "defaultList": "default",

        "forms": {
            "default": {
                "label": {},
                "groups": {
                    "Informations": {
                        "title": {
                            "en": "Informations",
                            "fr": "Informations"
                        },
                        "tabTitle": "Info",
                        "showTitle": true,
                        "showHeader": true,
                        "icon": "info",
                        "layout": {
                            "structure": [
                                {"columns": [3,1]},
                                {"columns": [1]}
                            ]
                        },
                        "priority": 10,
                        "properties": [
                            "title",
                            "active",
                            "schema"
                        ]
                    }
                },
                "sidebars": {
                    "default": {
                        "properties": [
                            "created",
                            "createdBy",
                            "lastModified",
                            "lastModifiedBy"
                        ]
                    }
                }
            }
        },

        "defaultForm": "default",

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "default"
                    }
                }
            },
            "admin.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "dataSources": ["request"]
                    }
                }
            }
        },

        "defaultCreateDashboard": "admin.edit",
        "defaultEditDashboard": "admin.edit",
        "defaultCollectionDashboard": "admin.table"
    }
}
