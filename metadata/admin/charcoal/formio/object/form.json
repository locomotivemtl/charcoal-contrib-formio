{
    "labels": {
        "name": {
            "en": "Form",
            "fr": "Formulaire"
        },
        "singular_name": {
            "en": "Form",
            "fr": "Formulaire"
        },
        "edit_item": {
            "en": "Edit Form",
            "fr": "Modifier le formulaire"
        },
        "create_item": {
            "en": "Create Form",
            "fr": "Cr√©er un formulaire"
        },
        "new_item": {
            "en": "New Form",
            "fr": "Nouveau formulaire"
        },
        "all_items": {
            "en": "All Forms",
            "fr": "Tous les formulaires"
        },
        "menu_items": {
            "en": "Forms",
            "fr": "Formulaire"
        }
    },

    "admin": {
        "lists": {
            "default": {
                "label": {},
                "properties": [
                    "title"
                ],
                "list_actions": [
                    {
                        "ident": "create",
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                ],
                "object_actions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "split_button": true,
                        "actions": {
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": {
                    "position": {
                        "property": "created",
                        "mode": "desc"
                    }
                }
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "label": {},
                "groups": {
                    "Informations": {
                        "title": {
                            "en": "Informations",
                            "fr": "Informations"
                        },
                        "tab_title": "Info",
                        "show_title": true,
                        "show_header": true,
                        "icon": "info",
                        "layout": {
                            "structure": [
                                {"columns": [3,1]},
                                {"columns": [1]}
                            ]
                        },
                        "priority": 10,
                        "properties": [
                            "title",
                            "active",
                            "schema"
                        ]
                    }
                },
                "sidebars": {
                    "default": {
                        "properties": [
                            "created",
                            "created_by",
                            "last_modified",
                            "last_modified_by"
                        ]
                    }
                }
            }
        },
        "default_form": "default",

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "form_ident": "default"
                    }
                }
            },
            "admin.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "data_sources": ["request"]
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
